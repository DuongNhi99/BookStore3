
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutFreecss.cshtml";
}

<!-- Start slider -->
<section id="aa-slider">
    <div class="aa-slider-area">
        <div id="sequence" class="seq">
            <div class="seq-screen">
                <ul class="seq-canvas">
                    <!-- single slide item -->
                    @foreach (var item in ViewBag.slider)
                    {
                        <li>
                            <div class="seq-model">
                                <img data-seq src="@Url.Content("~/Image")/@item.HinhAnh" alt="@item.HinhAnh" />
                            </div>
                            <div class="seq-title">
                                <span data-seq>Save Up to 50% Off</span>
                                <h2 data-seq>Sách Hot</h2>
                                <p data-seq>Sự hài lòng của quý khách là niềm vinh hạnh của chúng tôi.</p>
                                @*<a data-seq href="#" class="aa-shop-now-btn aa-secondary-btn">SHOP NOW</a>*@
                            </div>
                        </li>
                    }
                    <!-- single slide item -->
                </ul>
            </div>
            <!-- slider navigation btn -->
            <fieldset class="seq-nav" aria-controls="sequence" aria-label="Slider buttons">
                <a type="button" class="seq-prev" aria-label="Previous"><span class="fa fa-angle-left"></span></a>
                <a type="button" class="seq-next" aria-label="Next"><span class="fa fa-angle-right"></span></a>
            </fieldset>
        </div>
    </div>
</section>
<!-- / slider -->
