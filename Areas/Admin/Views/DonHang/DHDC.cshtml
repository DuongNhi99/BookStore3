@model IEnumerable<BookStore.Models.DonHang>

@{
    ViewBag.Title = "DHDC";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="inner_banner" class="section inner_banner_section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full">
                    <div class="title-holder">
                        <div class="title-holder-cell text-left">
                            <h1 class="page-title">Danh sách đơn hàng đang chờ duyệt</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end inner page banner -->

<div class="row">
    <div class="col-lg-12">

        <div class="col-lg-9 float-left" style="margin-top:30px">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.MaDH)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.User.HoTen)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.User.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NgayDat)
                    </th>
                   
                    <th>
                        @Html.DisplayNameFor(model => model.TongTien)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LoaiTT)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TinhTrangDonHang)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaDH)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.HoTen)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NgayDat)
                        </td>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.TongTien)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LoaiTT)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TinhTrangDonHang)
                        </td>
                        @if (item.TinhTrangDonHang == "Đã duyệt")
                        {
                            <td>
                                @Html.ActionLink("Đã giao", "DaGiao", new { id = item.MaDH })
                            </td>
                        }
                        else if (item.TinhTrangDonHang == "Đã hủy")
                        {
                            <td>
                                @Html.ActionLink("Hủy đơn", "Huy", new { id = item.MaDH })
                            </td>
                        }
                        else if (item.TinhTrangDonHang == "Đã giao")
                        {
                            <td>
                                @Html.ActionLink("Chi tiết đơn", "ChiTietDon", new { id = item.MaDH })
                            </td>
                        }
                        else
                        {
                            <td>
                                @Html.ActionLink("Duyệt", "Accept", new { id = item.MaDH })
                            </td>
                            <td>
                                @Html.ActionLink("Hủy đơn", "Huy", new { id = item.MaDH })
                            </td>

                        }
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

